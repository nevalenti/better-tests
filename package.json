{
  "name": "better-tests",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "serve:web": "nx serve web",
    "serve:api": "nx run api:run",
    "dev": "nx run-many --projects=web,api --targets=serve,watch --parallel",
