    "test": "nx run-many -t test --all --projects=web,api-tests --parallel",
    "e2e": "nx e2e web-e2e",
    "lint": "nx run-many -t lint --all --projects=web,api --parallel",
    "format": "nx format:write",
    "format:check": "nx format:check",
    "graph": "nx graph",
    "prepare": "husky"
  },
